@page "/"
@inject NavigationManager Nav
@inject WEB.Services.AuthState AuthState

@code {
    protected override async Task OnInitializedAsync()
    {
        await AuthState.InitializeAsync();
        if (AuthState.IsAuthenticated)
        {
            if (string.Equals(AuthState.UserType, "Principal", StringComparison.OrdinalIgnoreCase))
            {
                Nav.NavigateTo("/principal", true);
                return;
            }

            Nav.NavigateTo("/teacher", true);
            return;
        }
    }
}

<PageTitle>Grade Management</PageTitle>

<div class="card p-4">
    <h2><b>Grade Management</b></h2>

    <p>
        Dieses Tool dient zur Verwaltung von <b>Zeugnisnoten</b> und
        <b>nachträglichen Notenänderungen</b> am GIBZ.
    </p>

    <ul>
        <li>
            <b>Lehrpersonen</b> können Noten einsehen und Änderungsanträge stellen.
        </li>
        <li>
            <b>Prorektoren</b> sehen diese Anträge ein und bearbeiten sie.
        </li>
    </ul>

    <p class="mt-3">
        <b>Bitte melden Sie sich an, um fortzufahren.</b>
    </p>
</div>
