@page "/principal"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav
@using System.Net.Http.Headers
@using System.Net.Http.Json

<PageTitle>Dashboard</PageTitle>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}

<section class="card">
    <div class="card-head">
        <h4>Ausstehende Anfragen</h4>
    </div>

    @if (pending is null)
    {
        <p><em>Lade...</em></p>
    }
    else if (pending.Count == 0)
    {
        <p>Keine ausstehenden Anfragen.</p>
    }
    else
    {
        <div class="list">
            @foreach (var x in pending)
            {
                if (x is null)
                {
                    continue;
                }

                var teacherLabel = string.IsNullOrWhiteSpace(x.TeacherName) ? $"#{x.TeacherId}" : x.TeacherName;

                <div class="item">
                    <div class="item-top">
                        <div>
                            <div class="title">Anfrage #@x.Id</div>
                            <div class="sub">Erstellt von <b>@teacherLabel</b></div>
                        </div>
                        <span class="status status-pending">Wartet auf Antwort</span>
                    </div>

                    <div class="numbers">
                        <div class="num-box">
                            <div class="num-label">Alt</div>
                            <div class="num">@x.OriginalGradeValue</div>
                        </div>
                        <div class="arrow">→</div>
                        <div class="num-box">
                            <div class="num-label">Neu</div>
                            <div class="num strong">@x.RequestedGradeValue</div>
                        </div>
                    </div>

                    <div class="reason">
                        <div class="reason-label">Begründung der Lehrperson</div>
                        <div class="reason-text">@x.Reason</div>
                    </div>

                    <div class="actions">
                        <input class="form-control" @bind="x._comment" />
                        <button class="btn btn-success" @onclick="() => Review(x, true)" disabled="@busy">Akzeptieren</button>
                        <button class="btn btn-danger" @onclick="() => Review(x, false)" disabled="@busy">Ablehnen</button>
                    </div>
                </div>
            }
        </div>
    }
</section>

<section class="card mt-3">
    <div class="card-head">
        <h4>Verlauf</h4>
    </div>

    @if (reviewed is null)
    {
        <p><em>Lade...</em></p>
    }
    else if (reviewed.Count == 0)
    {
        <p>Keine bearbeiteten Anfragen.</p>
    }
    else
    {
        <div class="list">
            @foreach (var x in reviewed)
            {
                if (x is null)
                {
                    continue;
                }

                var teacherLabel = string.IsNullOrWhiteSpace(x.TeacherName) ? $"#{x.TeacherId}" : x.TeacherName;

                <div class="item">
                    <div class="item-top">
                        <div>
                            <div class="title">Anfrage #@x.Id</div>
                            <div class="sub">Erstellt von <b>@teacherLabel</b></div>
                        </div>

                        @if (x.Status?.Equals("Approved", StringComparison.OrdinalIgnoreCase) == true)
                        {
                            <span class="status status-approved">Akzeptiert</span>
                        }
                        else if (x.Status?.Equals("Rejected", StringComparison.OrdinalIgnoreCase) == true)
                        {
                            <span class="status status-rejected">Abgelehnt</span>
                        }
                        else
                        {
                            <span class="status status-pending">@x.Status</span>
                        }
                    </div>

                    <div class="numbers">
                        <div class="num-box">
                            <div class="num-label">Alt</div>
                            <div class="num">@x.OriginalGradeValue</div>
                        </div>
                        <div class="arrow">→</div>
                        <div class="num-box">
                            <div class="num-label">Neu</div>
                            <div class="num strong">@x.RequestedGradeValue</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(x.PrincipalComment))
                    {
                        <div class="reason">
                            <div class="reason-label">Ihr Kommentar</div>
                            <div class="reason-text">@x.PrincipalComment</div>
                        </div>
                    }

                    <div class="time">
                        Reviewed: @(x.ReviewedAt?.ToString("dd/MM/yyy HH:mm") ?? "-")
                    </div>
                </div>
            }
        </div>
    }
</section>

